{% extends 'baseBack.html.twig' %}

{% block title %}
	Table
{% endblock %}
{% block body %}
	<br><br><br>
	<h1>Restauranttable</h1>
	<br>

	<table class="table table-striped table-bordered table-hover">
		<tbody>
			<tr>
				<th>Table Number</th>
				<td>{{ restauranttable.tableid }}</td>
			</tr>
			<tr>
				<th>Isoccupied</th>
				<td>{{ restauranttable.isoccupied }}</td>
			</tr>
		</tbody>
	</table>
	<br><br><br>
	<div>
		<a href="{{ path('app_restauranttable_index') }}" class="btn btn-dark">Back to list</a>

		<a href="{{ path('app_restauranttable_edit', {'tableid': restauranttable.tableid}) }}" class="btn btn-outline-warning ml-2">Edit</a>
		<div style="display: inline-block; vertical-align: top;">
			{{ include('restauranttable/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
