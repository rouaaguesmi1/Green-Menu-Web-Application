{% extends 'baseBack.html.twig' %}
{% block title %}Tables
{% endblock %}

{% block body %}
	<br><br><br>
	<h1>List of Tables</h1>

	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th scope="col" class="fw-bold bg-dark text-light">
					Table Number</th>
				<th scope=" col" class=" fw-bold bg-dark text-light">Isoccupied</th>
				<th scope=" col" class=" fw-bold bg-dark text-light">
					Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for restauranttable in restauranttables %}
