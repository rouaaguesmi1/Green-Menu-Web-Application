					<td>{{ restauranttable.tableid }}</td>
					<td>{{ restauranttable.isoccupied }}</td>
					<td class="actions ">
						<div class="btn-group" role="group">
							<a href=" {{ path('app_restauranttable_show', {'tableid': restauranttable.tableid} ) }}" class=" btn btn-info text-light">
								Show</th>
							<a href="{{ path('app_restauranttable_edit', {'tableid': restauranttable.tableid}) }}" class="btn btn-dark text-light">Edit</a>
