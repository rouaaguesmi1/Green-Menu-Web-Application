{% extends 'baseFront.html.twig' %}
{% block title %}Restaurants
{% endblock %}


{% block body %}

	<head>

		<br><br><br><br><br>
		<!-- Bootstrap CSS -->
		<link
		rel="stylesheet" href=" {{ asset('Restaurantfront/css/bootstrap.min.css')}}">
		<!-- Google Fonts -->
		<link
		href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,700,900" rel="stylesheet">
		<!-- Simple line Icon -->
		<link
		rel="stylesheet" href="{{ asset('Restaurantfront/css/simple-line-icons.css')}}">
		<!-- Themify Icon -->
		<link
		rel="stylesheet" href="{{ asset('Restaurantfront/css/themify-icons.css')}}">
		<!-- Hover Effects -->
		<link
		rel="stylesheet" href="{{ asset('Restaurantfront/css/set1.css')}}">
		<!-- Main CSS -->
		<link rel="stylesheet" href="{{ asset('Restaurantfront/css/style.css')}}">
	</head>


</div>

<div>
	<section class="main-block light-bg">
		{% for restaurant in restaurants %}
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-5">
						<div class="styled-heading">
							<h3>
								Restaurants</h3>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-4 featured-responsive">
						<div class="featured-place-wrap">
							<a href="{{ path('app_restaurant_detail', {'restaurantid': restaurant.restaurantid}) }}">

								<img src="{{ asset('Restaurantfront/images/featured1.jpg')}}" class="img-fluid" alt="#">
								<div class="featured-title-box">
									<h6>{{ restaurant.name }}</h6>
									<br><p>{{ restaurant.restaurantid }}</p>


									<ul>
										<li>
											<span class="icon-location-pin"></span>
											<p>{{ restaurant.address }}</p>
										</li>
										<li>
											<span class="icon-screen-smartphone"></span>
											<p>
												{{ restaurant.description }}</p>
										</li>


									</ul>
									<div class="bottom-icons">
										<div class="closed-now">CHECK NOW</div>
										<span class="ti-heart"></span>
										<span class="ti-bookmark"></span>
									</div>
								</div>
							</a>
						</div>
					</div>


				</div>


				<div class="row justify-content-center">
					<div class="col-md-4">
						<div class="featured-btn-wrap">
							<a href="#" class="btn btn-black">VIEW ALL</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</section>
	</div>
	<!--//END FEATURED PLACES -->


	<script src="{{ asset('Restaurantfront/js/jquery-3.2.1.min.js')}}"></script>
	<script src="{{ asset('Restaurantfront/js/popper.min.js')}}"></script>
	<script src="{{ asset('Restaurantfront/js/bootstrap.min.js')}}"></script>

	<script>
		$(window).scroll(function () { // 100 = The point you would like to fade the nav in.

if ($(window).scrollTop() > 100) {

$('.fixed').addClass('is-sticky');

} else {

$('.fixed').removeClass('is-sticky');

};
});
	</script>

{% endblock %}
